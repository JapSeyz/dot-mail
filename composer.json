{
  "name": "dotkernel/dot-mail",
  "type": "library",
  "description": "Mail module for DotKernel based on Zend Mail",
  "license": "MIT",
  "authors": [
    {
      "name": "n3vrax",
      "email": "tibi@apidemia.com"
    }
  ],
  "require": {
    "php": "^5.6 || ^7.0",
    "psr/http-message": "^1.0",
    "container-interop/container-interop": "^1.1",

    "zendframework/zend-expressive-template": "^1.0",
    "zendframework/zend-stdlib": "^3.0",
    "zendframework/zend-eventmanager": "^3.0",
    "zendframework/zend-servicemanager": "^3.0",
    "zendframework/zend-mail": "^2.7",

    "dotkernel/dot-event": "0.6.x-dev",
    "dotkernel/dot-helpers": "0.6.x-dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^2.3"
  },
  "autoload": {
    "psr-4": {
      "Dot\\Mail\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DotTest\\Mail\\": "test/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-helpers.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/dotkernel/dot-event.git"
    }
  ],
  "extra": {
    "branch-alias": {
      "dev-master": "0.6-dev"
    }
  }
}
